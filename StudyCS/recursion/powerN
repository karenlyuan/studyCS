public class StudentClass{
	public static int powerN(int base, int n){
        //enter your solution below
				//do not use any Math methods!
		
		if(n == 0) {
		    return 1;
		}
		if(base == 0) {
		    return 0;
		}
		if(n == 1) {
		    return base;
		} else {
		    return base * powerN(base, n-1);
		}

	}
}
